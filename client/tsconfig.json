{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "commonjs",                  
    "lib": ["dom", "esnext"],                 
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,                          
    "esModuleInterop": true,
    "moduleResolution": "node",               
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    "server/**/*.ts"                          
  ],
  "exclude": ["node_modules"]

  
}
